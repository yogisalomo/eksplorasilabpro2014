				<div class="headermsg">
					Inbox Empty
				</div>
			<% else %>
				<% for pesan in @current_inbox %>
					<div class="headermsg">
						<b> Sender : </b> <%= pesan.sender %>
					</div>
					<div class="headermsg">
						<b> Time &nbsp&nbsp&nbsp&nbsp: </b> <%= pesan.created_at %>
					</div>
					<div class="messagetext">
						<%= pesan.text %>
					</div>
					<br> <br>
				<% end %>
			<% end %>
